{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/backend/**/*",
    "src/integrations/**/*",
    "src/orchestrator/**/*",
    "src/gateway/**/*",
    "src/jarvis/**/*",
    "src/services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/ui/**/*"
  ]
}
